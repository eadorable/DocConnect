<div class="container mt-4 min-vh-100">
  <div class="row justify-content-center">
    <div class="col-lg-6">

      <h2 class="text-center text-white mb-4 roboto-black-italic">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label_html: { class: 'text-white' } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      label_html: { class: 'text-white' } %>
          <%= f.input :remember_me, as: :boolean, if: devise_mapping.rememberable?, label: false, wrapper_html: { class: "text-white" } do %>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "text-white" %>
          <% end %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Log in", class: "btn btn-primary text-white" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
