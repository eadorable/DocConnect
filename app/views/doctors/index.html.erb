<h1>I am index doctor</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Doctor_ID</th>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Specialization</th>
      <th scope="col">Contact</th>
      <th scope="col">Action</th>

    </tr>
  </thead>
  <tbody>
  <%@doctors.each do |doctor| %>
    <tr>
      <td><%= doctor.id %></td>
      <td><%= doctor.name %></td>
      <td><%= doctor.address %></td>
      <td><%= doctor.specialty %></td>
      <td><%= doctor.contact_number %>, <%= doctor.email %></td>
      <td>

        <%= link_to(edit_doctor_path(doctor), class: "btn btn-outline-secondary") do %>
          <i class="fas fa-pen-to-square"></i>
        <% end %>

        <%= link_to(doctor_path(doctor), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" ) do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </td>
    </tr>
  <% end %>
  </tbody>
</table>
