<h1>I am new patient</h1>
<%= form_with(model: @patient, url: patients_path, method: :post) do |form| %>

  <div>
    <%= form.label "Full Name:" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label "Address:" %>
    <%= form.text_field :address %>
  </div>
  <div>
    <%= form.label "Contact Number:" %>
    <%= form.text_field :contact_number %>
  </div>
  <div>
    <%= form.label "Email:" %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label "Date of Birth:" %>
    <%= form.date_field :date_of_birth %>
  </div>

  <div>
    <%= form.submit "Save" %>
  </div>

<% end %>
