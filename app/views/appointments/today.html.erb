<div class="container mt-4 min-vh-100">
  <div class="text-center mb-4">

    <% if @appointments.present? %>
      <h1 class="h1--text">You have <%= @appointments.count %> <%= @appointments.count > 1 ? "patients today" : "patient today" %></h1>
    <% else %>
      <h1 class="h1--text">You have no patients today</h1>
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered border-primary">
      <thead>
        <tr class="text-center">
          <th scope="col">Date</th>
          <th scope="col">Name</th>
          <th scope="col">Age</th>
          <th scope="col">Height (cm)</th>
          <th scope="col">Weight (kg)</th>
          <th scope="col">History</th>
        </tr>
      </thead>
      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment.date&.strftime("%m-%d-%Y") %></td>
            <td><%= appointment.patient.name %></td>
            <td><%= appointment.patient.age %></td>
            <td><%= appointment.patient.height %></td>
            <td><%= appointment.patient.weight %></td>

            <td>
              <% appointment.patient.medical_histories.last(2).sort_by(&:updated_at).reverse.each do |history| %>
                <p><strong><%= history.updated_at.strftime("%m-%d-%Y") %></strong>: <%= history.history_details %></p>
              <% end %>

              <div class="btn-group">
                <%= link_to(patient_path(appointment.patient_id), class: "m-1") do %>
                  <i class="fas fa-eye"></i>Show more
                <% end %>

                <%= link_to(new_patient_medical_history_path(appointment.patient_id), class: "m-1") do %>
                  <i class="fas fa-plus"></i>Add
                <% end %>
              </div>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
