<div class="container min-vh-100 mt-5 text-white">
  <h1 class="text-center">New Appointment</h1>

  <%= simple_form_for(@appointment) do |f| %>

    <div data-controller="flatpickr">
      <%= f.input :date, as: :datetime, input_html: { data: { target: 'flatpickr.element' } } %>
    </div>

    <%= f.input :patient_id, collection: @patient_collection,
                 input_html: { class: 'form-control' } %>

    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>
