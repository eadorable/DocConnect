<div class="container min-vh-100 mt-5 text-white">
  <h1 class="text-center roboto-black-italic">New Appointment</h1>

  <%= simple_form_for(@appointment, data:{controller: "flatpcikr"}) do |f| %>

    <%= f.label :date, class: 'text-white' %>
    <% current_year = Time.current.year %>
    <%= f.datetime_field :date, class: 'form-control appointment_date mb-4' %>

    <%= f.input :patient_id, collection: @patient_collection, input_html: { class: 'form-control' } %>

    <% if Patient.all.empty? %>
      <p class="text-white">No patients available. <%= link_to "Add a patient", new_patient_path, class: "btn btn-primary" %></p>
    <% end %>

    <div class="text-center">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
